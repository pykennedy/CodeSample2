<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemTitle" parent="AppTheme">
        <item name="android:textColor">#00ffffff</item>
    </style>

    <style name="ItemRating" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/mcBlack38</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/mcBlack87</item>
    </style>

    <style name="DetailGenre" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mcBlack38</item>
    </style>

    <style name="DetailRating" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DetailOverview" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mcBlack60</item>
    </style>

</resources>
